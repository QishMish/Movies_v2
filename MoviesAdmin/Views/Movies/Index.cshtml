@model IEnumerable<Movies.Domain.Poco.Movie>
@{
    ViewData["Title"] = "Index";
}

<p class="text-center mt-6">
    <a class="btn bg-success text-light" asp-controller="Movies" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Poster</th>
            <th>Title</th>
            <th>Genre</th>
            <th>Description</th>
            <th>Duration</th>
            <th>StartDate</th>
            <th>Manage</th>
            <th>Uploaded By</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                <img src=@item.Poster width="40px">
            </td>
            <td>
                @item.Title
            </td>
            <td>
               @item.Genre
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Duration
            </td>
            
            <td>
                @item.StartDate
            </td>
            <td>
                @Html.ActionLink("Publish", "Publish", new {  id=item.Id  }) |
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id  })
                @Html.ActionLink("Details", "Details", new {  id=item.Id  }) 
                @Html.ActionLink("Delete", "Delete", new {  id=item.Id  })
            </td>
            <td>
                User
            </td>
            <td>
                @if(@item.Published){
                     <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="green" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                      <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                    </svg>
                }else{
                     <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="red" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                      <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                    </svg>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
